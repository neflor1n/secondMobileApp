<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="secondMobileApp.Valgusfoor"
             Title="Valgusfoor">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Заголовок -->
        <StackLayout>
            <Label x:Name="statusLabel"
           Text="Valgusfoor on välja lülitatud"
           FontSize="22"
           HorizontalOptions="Center" />

            <Label x:Name="DayOrNight"
           Text=""
           FontSize="12"
           HorizontalOptions="Center" />    

        </StackLayout>

        <!-- Контейнер для светофора -->
        <VerticalStackLayout x:Name="trafficLightContainer"
                             Spacing="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
        </VerticalStackLayout>

        <!-- Кнопки управления -->
        <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto" HorizontalOptions="Center" RowSpacing="10" ColumnSpacing="5">
            <Button Text="Sisse" Clicked="TurnOnLight" Grid.Row="0" Grid.Column="0" />
            <Button Text="Välja" Clicked="TurnOffLight" Grid.Row="0" Grid.Column="1" />
            <Button Text="Auto Mode" Clicked="StartAutoMode" Grid.Row="0" Grid.Column="2" />
            <Button Text="Päev ja öö mode" Clicked="DayAndNightMode" Grid.Row="1" Grid.Column="0" />
            <Button Text="värv halliks" Clicked = "ChangeColorToGray" Grid.Row="1" Grid.Column="1" />
        </Grid>



    </VerticalStackLayout>
</ContentPage>
