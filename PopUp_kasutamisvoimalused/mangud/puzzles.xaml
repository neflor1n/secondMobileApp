<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="secondMobileApp.PopUp_kasutamisvoimalused.mangud.puzzles">

    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="Загадки"
               FontSize="32"
               HorizontalOptions="Center" />

        <Label x:Name="riddleLabel"
               Text="Нажмите кнопку для начала"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry x:Name="answerEntry"
               Placeholder="Ваш ответ"
               FontSize="20"
               HorizontalOptions="Center" />

        <Button x:Name="checkAnswerButton"
                Text="Проверить"
                Clicked="OnCheckAnswerClicked"
                HorizontalOptions="Center" />

        <Label x:Name="feedbackLabel"
               Text=""
               FontSize="18"
               HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
