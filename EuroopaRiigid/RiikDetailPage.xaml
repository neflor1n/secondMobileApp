<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="secondMobileApp.EuroopaRiigid.RiikDetailPage"
             Title="RiikDetailPage">
    <StackLayout Padding="20">
        <Border Stroke="Black" StrokeThickness="2" StrokeShape="Rectangle" WidthRequest="162">
            <Image Source="{Binding Lipp}" Aspect="AspectFit"/>
        </Border>



        <Label Text="{Binding Nimetus}" FontSize="24" FontAttributes="Bold"/>
        <Label Text="{Binding Pealinn}" FontSize="18"/>
        <Label Text="{Binding RahvastikuSuurus, StringFormat='Rahvaarv: {0:N0}'}" FontSize="16"/>

    </StackLayout>
</ContentPage>
